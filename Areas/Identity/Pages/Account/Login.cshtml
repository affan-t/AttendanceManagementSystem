@page
@model LoginModel

@{
    ViewData["Title"] = "Sign In";
    Layout = "/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-card">
    <div class="auth-header">
        <div class="auth-logo">
            <i class="bi bi-mortarboard-fill"></i>
        </div>
        <h1 class="auth-title">Welcome Back</h1>
        <p class="auth-subtitle">Sign in to your account</p>
    </div>
    
    <div class="auth-body">
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="form-group">
                <label asp-for="Input.Email" class="form-label">Email Address</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                </div>
                <span asp-validation-for="Input.Email" class="invalid-feedback d-block"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="••••••••" />
                </div>
                <span asp-validation-for="Input.Password" class="invalid-feedback d-block"></span>
            </div>
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary btn-lg w-100">
                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
            </button>
        </form>
    </div>
    
    <div class="auth-footer">
        <small class="text-muted">&copy; @DateTime.Now.Year Attendance Management System</small>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
