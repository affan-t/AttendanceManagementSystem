@model AttendanceManagementSystem.Models.Section

<form id="createSectionForm" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="form-group mb-3">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" placeholder="e.g., Section A, Section B" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success">Create Section</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
