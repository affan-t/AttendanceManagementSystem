@model IEnumerable<AttendanceManagementSystem.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="page-title">Courses</h1>
        <p class="page-subtitle mb-0">Manage academic courses</p>
    </div>
    <button type="button" class="btn btn-primary btn-create" data-entity="course">
        <i class="bi bi-plus-lg me-1"></i>Add Course
    </button>
</div>

<!-- Stats -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value" id="totalCount">@Model.Count()</div>
                    <div class="stat-card-label">Total Courses</div>
                </div>
                <div class="stat-card-icon primary">
                    <i class="bi bi-book"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0">All Courses</h6>
        <div class="input-group" style="width: 250px;">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input type="text" id="searchInput" class="form-control form-control-sm" placeholder="Search...">
        </div>
    </div>
    <div class="table-responsive">
        <table class="table mb-0" id="dataTable">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Credit Hours</th>
                    <th style="width: 120px;">Actions</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                @Html.Partial("_CoursesTable", Model)
            </tbody>
        </table>
    </div>
</div>

<!-- Modal for Create/Edit -->
<div class="modal fade" id="courseModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="courseModalLabel">Course</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="courseModalBody">
                <!-- Content loaded via AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Configuration
            const config = {
                entity: 'course',
                entityPlural: 'courses',
                modalId: 'courseModal',
                tableBodyId: 'tableBody',
                getTableDataUrl: '@Url.Action("GetTableData")',
                createUrl: '@Url.Action("Create")',
                editUrl: '@Url.Action("Edit")',
                deleteUrl: '@Url.Action("DeleteAjax")'
            };

            // Initialize CRUD Handler
            AMS.CRUD.init(config);
            
            // Search functionality
            $('#searchInput').on('keyup', function() {
                const searchTerm = $(this).val().toLowerCase();
                $('#dataTable tbody tr:not(#emptyRow)').each(function() {
                    const text = $(this).text().toLowerCase();
                    $(this).toggle(text.includes(searchTerm));
                });
            });
        });
    </script>
    @Html.AntiForgeryToken()
}
