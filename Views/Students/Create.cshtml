@model AttendanceManagementSystem.ViewModels.StudentCreateViewModel

@{
    ViewData["Title"] = "Add New Student";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Add New Student</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-primary border-bottom pb-2 mb-3">Personal Information</h5>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Full Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="FatherName" class="control-label"></label>
                            <input asp-for="FatherName" class="form-control" />
                            <span asp-validation-for="FatherName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CNIC" class="control-label"></label>
                            <input asp-for="CNIC" class="form-control" placeholder="00000-0000000-0" />
                            <span asp-validation-for="CNIC" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Address" class="control-label"></label>
                            <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5 class="text-primary border-bottom pb-2 mb-3">Academic Details</h5>

                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="RollNo" class="control-label">Registration No</label>
                                <input asp-for="RollNo" class="form-control" />
                                <span asp-validation-for="RollNo" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="EnrollmentYear" class="control-label"></label>
                                <input asp-for="EnrollmentYear" class="form-control" value="@DateTime.Now.Year" />
                                <span asp-validation-for="EnrollmentYear" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="Degree" class="control-label"></label>
                                <input asp-for="Degree" class="form-control" placeholder="e.g. BSCS" />
                                <span asp-validation-for="Degree" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="Department" class="control-label"></label>
                                <input asp-for="Department" class="form-control" placeholder="e.g. CS" />
                                <span asp-validation-for="Department" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="IntakeBatch" class="control-label">Batch</label>
                            <select asp-for="IntakeBatch" class="form-control">
                                <option value="">-- Select Batch --</option>
                                <option value="Fall">Fall</option>
                                <option value="Spring">Spring</option>
                                <option value="Summer">Summer</option>
                            </select>
                            <span asp-validation-for="IntakeBatch" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="BatchId" class="control-label">Assign to Batch/Session</label>
                            <select asp-for="BatchId" class="form-control" asp-items="ViewBag.BatchId">
                                <option value="">-- Select Batch/Session --</option>
                            </select>
                            <span asp-validation-for="BatchId" class="text-danger"></span>
                            <small class="form-text text-muted">Select the academic session batch (e.g., 2022-2026)</small>
                        </div>

                        <h5 class="text-primary border-bottom pb-2 mb-3 mt-2">Login Credentials</h5>
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4 text-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-success px-4">Create Student Account</button>
                </div>
            </form>
        </div>
    </div>
</div>