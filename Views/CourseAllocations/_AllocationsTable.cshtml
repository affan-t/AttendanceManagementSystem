@model IEnumerable<AttendanceManagementSystem.Models.CourseAllocation>

@if (!Model.Any())
{
    <tr id="emptyRow">
        <td colspan="6">
            <div class="empty-state py-4">
                <div class="empty-state-icon"><i class="bi bi-diagram-3"></i></div>
                <h6 class="empty-state-title">No Allocations Found</h6>
                <p class="empty-state-text mb-0">Get started by creating your first course allocation.</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var item in Model)
    {
        <tr data-id="@item.Id">
            <td>
                <span class="badge badge-primary">@item.Course.Code</span>
                <span class="fw-medium ms-1">@item.Course.Name</span>
            </td>
            <td>@item.Teacher.Name</td>
            <td><span class="badge badge-info">@item.Batch.Name</span></td>
            <td>@item.Section.Name</td>
            <td>@item.Semester.Name</td>
            <td>
                <div class="table-actions">
                    <button type="button" class="btn btn-sm btn-outline-primary btn-edit" 
                            data-id="@item.Id" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-danger btn-delete" 
                            data-id="@item.Id" data-name="@item.Course.Code" title="Delete">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </td>
        </tr>
    }
}
