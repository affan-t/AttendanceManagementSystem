@model List<dynamic>

@{
    ViewData["Title"] = "Low Attendance Students";
    var threshold = ViewBag.Threshold as int? ?? 75;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-exclamation-triangle text-danger"></i> Low Attendance Students</h2>
            <p class="text-muted mb-0">Students with attendance below @threshold%</p>
        </div>
        <div>
            @if (Model.Any())
            {
                <a asp-action="ExportLowAttendanceReport" asp-route-threshold="@threshold" class="btn btn-success me-2">
                    <i class="bi bi-download"></i> Export CSV
                </a>
            }
            <a asp-action="Reports" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> All Reports
            </a>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="bi bi-house"></i> Dashboard
            </a>
        </div>
    </div>

    <!-- Threshold Filter -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Attendance Threshold (%)</label>
                    <input type="number" name="threshold" class="form-control" value="@threshold" min="0" max="100" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-funnel"></i> Apply
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Alert -->
    <div class="alert alert-warning d-flex align-items-center mb-4">
        <i class="bi bi-info-circle-fill me-2 fs-4"></i>
        <div>
            <strong>@Model.Count students</strong> have attendance below @threshold%. 
            These students may be at risk of academic penalties.
        </div>
    </div>

    <!-- Students Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="bi bi-people"></i> Students Below Threshold</h5>
        </div>
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center p-5">
                    <i class="bi bi-emoji-smile fs-1 text-success"></i>
                    <p class="text-success mt-2 fw-bold">Great! No students below @threshold% attendance.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Roll No</th>
                                <th>Name</th>
                                <th>Batch</th>
                                <th>Department</th>
                                <th class="text-center">Total Classes</th>
                                <th class="text-center">Present</th>
                                <th class="text-center">Absent</th>
                                <th class="text-center">Attendance %</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 1;
                            }
                            @foreach (var item in Model)
                            {
                                var student = item.Student as AttendanceManagementSystem.Models.Student;
                                double percentage = item.Percentage;
                                string rowClass = percentage < 50 ? "table-danger" : (percentage < 65 ? "table-warning" : "");
                                <tr class="@rowClass">
                                    <td>@counter</td>
                                    <td><code>@student?.RollNo</code></td>
                                    <td><strong>@student?.Name</strong></td>
                                    <td>@student?.Batch?.Name</td>
                                    <td>@student?.Department</td>
                                    <td class="text-center">@item.TotalClasses</td>
                                    <td class="text-center text-success">@item.PresentCount</td>
                                    <td class="text-center text-danger">@item.AbsentCount</td>
                                    <td class="text-center">
                                        @{
                                            string badgeClass = percentage < 50 ? "bg-danger" : (percentage < 65 ? "bg-warning text-dark" : "bg-secondary");
                                        }
                                        <span class="badge @badgeClass fs-6">@percentage%</span>
                                    </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Legend -->
    <div class="mt-3">
        <small class="text-muted">
            <span class="badge bg-danger me-2">Below 50%</span> Critical
            <span class="badge bg-warning text-dark me-2 ms-3">50-65%</span> Warning
            <span class="badge bg-secondary me-2 ms-3">65-@threshold%</span> Below Threshold
        </small>
    </div>
</div>
