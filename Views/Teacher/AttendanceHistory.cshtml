@model IEnumerable<AttendanceManagementSystem.Models.Attendance>

@{
    ViewData["Title"] = "Attendance History";
    var allocation = ViewBag.Allocation as AttendanceManagementSystem.Models.CourseAllocation;
    var groupedAttendance = ViewBag.GroupedAttendance as Dictionary<DateTime, List<AttendanceManagementSystem.Models.Attendance>>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-clock-history"></i> Attendance History</h2>
            <p class="text-muted mb-0">
                <strong>@allocation?.Course?.Name</strong> (@allocation?.Course?.Code) - 
                Section @allocation?.Section?.Name | @allocation?.Batch?.Name
            </p>
        </div>
        <div>
            <a asp-action="MarkAttendance" asp-route-id="@allocation?.Id" class="btn btn-success me-2">
                <i class="bi bi-pen"></i> Mark New
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (groupedAttendance == null || !groupedAttendance.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No attendance records found for this course yet.
        </div>
    }
    else
    {
        <!-- Summary -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h4 class="text-primary">@groupedAttendance.Count</h4>
                        <small class="text-muted">Sessions Conducted</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success bg-opacity-10">
                    <div class="card-body text-center">
                        <h4 class="text-success">@Model.Count(a => a.IsPresent)</h4>
                        <small class="text-muted">Total Present Marks</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger bg-opacity-10">
                    <div class="card-body text-center">
                        <h4 class="text-danger">@Model.Count(a => !a.IsPresent)</h4>
                        <small class="text-muted">Total Absent Marks</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info bg-opacity-10">
                    <div class="card-body text-center">
                        @{
                            var avgAttendance = Model.Any() ? Math.Round((double)Model.Count(a => a.IsPresent) / Model.Count() * 100, 1) : 0;
                        }
                        <h4 class="text-info">@avgAttendance%</h4>
                        <small class="text-muted">Average Attendance</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Attendance by Date -->
        <div class="accordion" id="attendanceAccordion">
            @{
                int index = 0;
            }
            @foreach (var dateGroup in groupedAttendance.OrderByDescending(g => g.Key))
            {
                var present = dateGroup.Value.Count(a => a.IsPresent);
                var absent = dateGroup.Value.Count(a => !a.IsPresent);
                var percentage = dateGroup.Value.Any() ? Math.Round((double)present / dateGroup.Value.Count * 100, 1) : 0;
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading@(index)">
                        <button class="accordion-button @(index > 0 ? "collapsed" : "")" type="button" 
                                data-bs-toggle="collapse" data-bs-target="#collapse@(index)">
                            <div class="d-flex justify-content-between align-items-center w-100 me-3">
                                <span>
                                    <strong>@dateGroup.Key.ToString("dddd, MMMM dd, yyyy")</strong>
                                </span>
                                <span>
                                    <span class="badge bg-success me-1">@present Present</span>
                                    <span class="badge bg-danger me-1">@absent Absent</span>
                                    <span class="badge bg-secondary">@percentage%</span>
                                </span>
                            </div>
                        </button>
                    </h2>
                    <div id="collapse@(index)" class="accordion-collapse collapse @(index == 0 ? "show" : "")" 
                         data-bs-parent="#attendanceAccordion">
                        <div class="accordion-body">
                            <div class="d-flex justify-content-end mb-2">
                                <a asp-action="EditAttendance" asp-route-id="@allocation?.Id" 
                                   asp-route-date="@dateGroup.Key.ToString("yyyy-MM-dd")" 
                                   class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-pencil"></i> Edit Attendance
                                </a>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-sm table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>#</th>
                                            <th>Roll No</th>
                                            <th>Name</th>
                                            <th class="text-center">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int counter = 1;
                                        }
                                        @foreach (var record in dateGroup.Value.OrderBy(r => r.Student?.RollNo))
                                        {
                                            <tr>
                                                <td>@counter</td>
                                                <td><code>@record.Student?.RollNo</code></td>
                                                <td>@record.Student?.Name</td>
                                                <td class="text-center">
                                                    @if (record.IsPresent)
                                                    {
                                                        <span class="badge bg-success">Present</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">Absent</span>
                                                    }
                                                </td>
                                            </tr>
                                            counter++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                index++;
            }
        </div>
    }
</div>
