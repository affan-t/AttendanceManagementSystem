@model List<dynamic>

@{
    ViewData["Title"] = "Attendance Report";
    var allocation = ViewBag.Allocation as AttendanceManagementSystem.Models.CourseAllocation;
    var teacher = ViewBag.Teacher as AttendanceManagementSystem.Models.Teacher;
    var totalPresent = ViewBag.TotalPresent as int? ?? 0;
    var totalAbsent = ViewBag.TotalAbsent as int? ?? 0;
    var attendanceByDate = ViewBag.AttendanceByDate as IEnumerable<dynamic>;
    
    var goodCount = Model.Count(m => (double)m.Percentage >= 75);
    var warningCount = Model.Count(m => (double)m.Percentage >= 60 && (double)m.Percentage < 75);
    var criticalCount = Model.Count(m => (double)m.Percentage < 60 && (int)m.TotalClasses > 0);
    var noDataCount = Model.Count(m => (int)m.TotalClasses == 0);
    
    var overallPercentage = (totalPresent + totalAbsent) > 0 
        ? Math.Round((double)totalPresent / (totalPresent + totalAbsent) * 100, 1) 
        : 0;
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="page-title"><i class="bi bi-file-earmark-bar-graph me-2"></i>Attendance Report</h1>
        <p class="page-subtitle mb-0">
            <span class="badge badge-primary">@allocation?.Course?.Code</span>
            @allocation?.Course?.Name - @allocation?.Batch?.Name / @allocation?.Section?.Name
        </p>
    </div>
    <div class="d-flex gap-2">
        <button type="button" class="btn btn-success" onclick="generatePDF()">
            <i class="bi bi-file-pdf me-1"></i>Download PDF
        </button>
        <a href="@Url.Action("ExportAttendanceReport", new { id = allocation?.Id })" class="btn btn-primary">
            <i class="bi bi-download me-1"></i>Export CSV
        </a>
        <a href="@Url.Action("AttendanceReport")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back
        </a>
    </div>
</div>

<div id="reportContent">
    <!-- Report Header for PDF -->
    <div class="report-header d-none" id="pdfHeader">
        <h2 class="text-center mb-2">Attendance Report</h2>
        <p class="text-center text-muted mb-4">
            @allocation?.Course?.Name (@allocation?.Course?.Code) | Teacher: @teacher?.Name | Generated: @DateTime.Now.ToString("MMMM dd, yyyy")
        </p>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-card-value">@Model.Count</div>
                        <div class="stat-card-label">Total Students</div>
                    </div>
                    <div class="stat-card-icon primary">
                        <i class="bi bi-people"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-card-value text-success">@totalPresent</div>
                        <div class="stat-card-label">Total Present</div>
                    </div>
                    <div class="stat-card-icon success">
                        <i class="bi bi-check-circle"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-card-value text-danger">@totalAbsent</div>
                        <div class="stat-card-label">Total Absent</div>
                    </div>
                    <div class="stat-card-icon danger">
                        <i class="bi bi-x-circle"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-card-value text-info">@overallPercentage%</div>
                        <div class="stat-card-label">Overall Attendance</div>
                    </div>
                    <div class="stat-card-icon info">
                        <i class="bi bi-pie-chart"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row g-4 mb-4">
        <!-- Attendance Distribution Pie Chart -->
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-pie-chart me-2"></i>Attendance Distribution</h6>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <div class="chart-container" style="width: 100%; height: 250px;">
                        <canvas id="attendancePieChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Student Status Distribution -->
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-bar-chart me-2"></i>Student Status</h6>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <div class="chart-container" style="width: 100%; height: 250px;">
                        <canvas id="statusChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Daily Attendance Trend -->
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-graph-up me-2"></i>Attendance Trend</h6>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <div class="chart-container" style="width: 100%; height: 250px;">
                        <canvas id="trendChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <h3 class="text-success mb-1">@goodCount</h3>
                    <small class="text-muted">Good Standing (?75%)</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <h3 class="text-warning mb-1">@warningCount</h3>
                    <small class="text-muted">Warning (60-74%)</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body text-center">
                    <h3 class="text-danger mb-1">@criticalCount</h3>
                    <small class="text-muted">Critical (&lt;60%)</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-secondary">
                <div class="card-body text-center">
                    <h3 class="text-secondary mb-1">@noDataCount</h3>
                    <small class="text-muted">No Data</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Student Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h6 class="mb-0"><i class="bi bi-table me-2"></i>Student-wise Attendance</h6>
            <span class="badge bg-secondary">@Model.Count students</span>
        </div>
        <div class="table-responsive">
            <table class="table mb-0" id="reportTable">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Roll No</th>
                        <th>Student Name</th>
                        <th class="text-center">Total</th>
                        <th class="text-center">Present</th>
                        <th class="text-center">Absent</th>
                        <th class="text-center">Attendance</th>
                        <th class="text-center">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @{int counter = 1;}
                    @foreach (var item in Model)
                    {
                        var student = item.Student as AttendanceManagementSystem.Models.Student;
                        double percentage = item.Percentage;
                        string badgeClass = percentage >= 75 ? "badge-success" : (percentage >= 60 ? "badge-warning" : "badge-danger");
                        string statusText = percentage >= 75 ? "Good" : (percentage >= 60 ? "Warning" : "Critical");
                        <tr>
                            <td class="text-muted">@counter</td>
                            <td><span class="badge badge-secondary">@student?.RollNo</span></td>
                            <td class="fw-medium">@student?.Name</td>
                            <td class="text-center">@item.TotalClasses</td>
                            <td class="text-center text-success fw-medium">@item.PresentCount</td>
                            <td class="text-center text-danger fw-medium">@item.AbsentCount</td>
                            <td class="text-center">
                                @if ((int)item.TotalClasses > 0)
                                {
                                    <span class="badge @badgeClass">@percentage%</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-center">
                                @if ((int)item.TotalClasses > 0)
                                {
                                    <span class="badge @badgeClass">@statusText</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">No Data</span>
                                }
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Report Footer for PDF -->
    <div class="report-footer d-none mt-4 pt-3 border-top" id="pdfFooter">
        <p class="text-muted small text-center">
            This report was generated by the Attendance Management System on @DateTime.Now.ToString("MMMM dd, yyyy 'at' hh:mm tt")
        </p>
    </div>
</div>

@section Scripts {
    <!-- html2pdf library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
    
    <script>
        // Attendance Pie Chart
        const pieCtx = document.getElementById('attendancePieChart').getContext('2d');
        new Chart(pieCtx, {
            type: 'doughnut',
            data: {
                labels: ['Present', 'Absent'],
                datasets: [{
                    data: [@totalPresent, @totalAbsent],
                    backgroundColor: ['#10b981', '#ef4444'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' }
                },
                cutout: '60%'
            }
        });

        // Status Chart
        const statusCtx = document.getElementById('statusChart').getContext('2d');
        new Chart(statusCtx, {
            type: 'bar',
            data: {
                labels: ['Good', 'Warning', 'Critical', 'No Data'],
                datasets: [{
                    label: 'Students',
                    data: [@goodCount, @warningCount, @criticalCount, @noDataCount],
                    backgroundColor: ['#10b981', '#f59e0b', '#ef4444', '#6b7280']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: { beginAtZero: true, ticks: { stepSize: 1 } }
                }
            }
        });

        // Trend Chart
        @if (attendanceByDate != null && attendanceByDate.Any())
        {
            var dates = attendanceByDate.Select(a => ((DateTime)a.Date).ToString("MMM dd")).ToList();
            var presentData = attendanceByDate.Select(a => (int)a.Present).ToList();
            var absentData = attendanceByDate.Select(a => (int)a.Absent).ToList();
            <text>
            const trendCtx = document.getElementById('trendChart').getContext('2d');
            new Chart(trendCtx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(dates)),
                    datasets: [{
                        label: 'Present',
                        data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(presentData)),
                        borderColor: '#10b981',
                        backgroundColor: 'rgba(16, 185, 129, 0.1)',
                        fill: true,
                        tension: 0.4
                    }, {
                        label: 'Absent',
                        data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(absentData)),
                        borderColor: '#ef4444',
                        backgroundColor: 'rgba(239, 68, 68, 0.1)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' }
                    },
                    scales: {
                        y: { beginAtZero: true, ticks: { stepSize: 1 } }
                    }
                }
            });
            </text>
        }
        else
        {
            <text>
            const trendCtx = document.getElementById('trendChart').getContext('2d');
            trendCtx.font = '14px Inter';
            trendCtx.fillStyle = '#6b7280';
            trendCtx.textAlign = 'center';
            trendCtx.fillText('No attendance data yet', trendCtx.canvas.width / 2, trendCtx.canvas.height / 2);
            </text>
        }

        // Generate PDF
        function generatePDF() {
            // Show PDF headers/footers
            document.getElementById('pdfHeader').classList.remove('d-none');
            document.getElementById('pdfFooter').classList.remove('d-none');
            
            const element = document.getElementById('reportContent');
            const opt = {
                margin: 10,
                filename: 'AttendanceReport_@(allocation?.Course?.Code)_@(DateTime.Now.ToString("yyyyMMdd")).pdf',
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2, useCORS: true },
                jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
            };

            html2pdf().set(opt).from(element).save().then(() => {
                // Hide PDF headers/footers after generating
                document.getElementById('pdfHeader').classList.add('d-none');
                document.getElementById('pdfFooter').classList.add('d-none');
            });
        }
    </script>
}
