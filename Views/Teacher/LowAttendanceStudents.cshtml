@model List<dynamic>

@{
    ViewData["Title"] = "Low Attendance Students";
    var allocation = ViewBag.Allocation as AttendanceManagementSystem.Models.CourseAllocation;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-exclamation-triangle text-danger"></i> Low Attendance Students</h2>
            <p class="text-muted mb-0">
                <strong>@allocation?.Course?.Name</strong> (@allocation?.Course?.Code) - 
                Section @allocation?.Section?.Name | Students below 75% attendance
            </p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-success">
            <i class="bi bi-emoji-smile"></i> <strong>Great!</strong> All students have attendance above 75%.
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-info-circle"></i> <strong>@Model.Count students</strong> have attendance below 75%. 
            Consider reaching out to them.
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Students Requiring Attention</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Roll No</th>
                                <th>Name</th>
                                <th class="text-center">Total Classes</th>
                                <th class="text-center">Present</th>
                                <th class="text-center">Absent</th>
                                <th class="text-center">Attendance %</th>
                                <th class="text-center">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 1;
                            }
                            @foreach (var item in Model)
                            {
                                var student = item.Student as AttendanceManagementSystem.Models.Student;
                                double percentage = item.Percentage;
                                string statusClass = percentage < 50 ? "bg-danger" : "bg-warning text-dark";
                                string statusText = percentage < 50 ? "Critical" : "Warning";
                                string rowClass = percentage < 50 ? "table-danger" : "table-warning";
                                <tr class="@rowClass">
                                    <td>@counter</td>
                                    <td><code>@student?.RollNo</code></td>
                                    <td><strong>@student?.Name</strong></td>
                                    <td class="text-center">@item.TotalClasses</td>
                                    <td class="text-center text-success">@item.PresentCount</td>
                                    <td class="text-center text-danger">@item.AbsentCount</td>
                                    <td class="text-center">
                                        <span class="badge @statusClass fs-6">@percentage%</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @statusClass">@statusText</span>
                                    </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <small class="text-muted">
                <span class="badge bg-danger me-2">Below 50%</span> Critical - May face academic penalties
                <span class="badge bg-warning text-dark me-2 ms-3">50-74%</span> Warning - Needs improvement
            </small>
        </div>
    }
</div>
