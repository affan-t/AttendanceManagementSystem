@model List<dynamic>

@{
    ViewData["Title"] = "Low Attendance Students";
    var allocation = ViewBag.Allocation as AttendanceManagementSystem.Models.CourseAllocation;
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="page-title"><i class="bi bi-exclamation-triangle text-danger me-2"></i>Low Attendance Students</h1>
        <p class="page-subtitle mb-0">
            <span class="badge badge-primary">@allocation?.Course?.Code</span>
            @allocation?.Course?.Name - Students below 75% attendance
        </p>
    </div>
    <a href="@Url.Action("LowAttendanceStudents")" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back
    </a>
</div>

@if (!Model.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="empty-state py-5">
                <div class="empty-state-icon text-success"><i class="bi bi-emoji-smile"></i></div>
                <h5 class="empty-state-title text-success">All Students in Good Standing!</h5>
                <p class="empty-state-text">Great news! All students have attendance above 75%.</p>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
            <div>
                <strong>@Model.Count student(s)</strong> have attendance below 75%. Consider reaching out to them.
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h6 class="mb-0"><i class="bi bi-people me-2"></i>Students Requiring Attention</h6>
        </div>
        <div class="table-responsive">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Roll No</th>
                        <th>Student Name</th>
                        <th class="text-center">Total</th>
                        <th class="text-center">Present</th>
                        <th class="text-center">Absent</th>
                        <th class="text-center">Attendance</th>
                        <th class="text-center">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @{int counter = 1;}
                    @foreach (var item in Model)
                    {
                        var student = item.Student as AttendanceManagementSystem.Models.Student;
                        double percentage = item.Percentage;
                        string badgeClass = percentage < 50 ? "badge-danger" : "badge-warning";
                        string statusText = percentage < 50 ? "Critical" : "Warning";
                        <tr>
                            <td class="text-muted">@counter</td>
                            <td><span class="badge badge-secondary">@student?.RollNo</span></td>
                            <td class="fw-medium">@student?.Name</td>
                            <td class="text-center">@item.TotalClasses</td>
                            <td class="text-center text-success fw-medium">@item.PresentCount</td>
                            <td class="text-center text-danger fw-medium">@item.AbsentCount</td>
                            <td class="text-center">
                                <span class="badge @badgeClass">@percentage%</span>
                            </td>
                            <td class="text-center">
                                <span class="badge @badgeClass">@statusText</span>
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Legend -->
    <div class="mt-3 text-muted small">
        <strong>Legend:</strong>
        <span class="badge badge-danger ms-2">&lt;50%</span> Critical - May face academic penalties
        <span class="badge badge-warning ms-2">50-74%</span> Warning - Needs improvement
    </div>
}
