@model IEnumerable<AttendanceManagementSystem.Models.Enrollment>

@{
    ViewData["Title"] = "View Students";
    var allocation = ViewBag.Allocation as AttendanceManagementSystem.Models.CourseAllocation;
    var studentAttendance = ViewBag.StudentAttendance as Dictionary<int, (int Total, int Present, double Percentage)>;
}

<div class="container-fluid">
    <div class="mb-4 border-bottom pb-3">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2><i class="bi bi-people-fill"></i> Registered Students</h2>
            </div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
        <div class="card mt-3">
            <div class="card-body">
                <h5 class="card-title text-primary">@allocation.Course.Name (@allocation.Course.Code)</h5>
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-1"><strong>Teacher:</strong> @allocation.Teacher.Name</p>
                        <p class="mb-1"><strong>Section:</strong> @allocation.Section.Name</p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-1"><strong>Batch:</strong> @allocation.Batch.Name</p>
                        <p class="mb-1"><strong>Semester:</strong> @allocation.Semester.Name</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2"></i>
            <div>
                <strong>No students enrolled!</strong> No students have registered for this course section yet.
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-list-ul"></i> Student List 
                    <span class="badge bg-light text-dark float-end">Total: @Model.Count()</span>
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Registration Number</th>
                                <th>Name</th>
                                <th>Father's Name</th>
                                <th>Department</th>
                                <th class="text-center">Classes</th>
                                <th class="text-center">Present</th>
                                <th class="text-center">Attendance %</th>
                                <th class="text-center">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 1;
                            }
                            @foreach (var enrollment in Model)
                            {
                                var attendance = studentAttendance?.ContainsKey(enrollment.StudentId) == true 
                                    ? studentAttendance[enrollment.StudentId] 
                                    : (0, 0, 0.0);
                                int attTotal = attendance.Item1;
                                int attPresent = attendance.Item2;
                                double percentage = attendance.Item3;
                                string statusClass = percentage >= 75 ? "bg-success" : (percentage >= 60 ? "bg-warning text-dark" : "bg-danger");
                                string statusText = percentage >= 75 ? "Good" : (percentage >= 60 ? "Warning" : "Critical");
                                string rowClass = attTotal > 0 && percentage < 75 ? (percentage < 60 ? "table-danger" : "table-warning") : "";
                                <tr class="@rowClass">
                                    <td>@counter</td>
                                    <td><strong>@enrollment.Student.RollNo</strong></td>
                                    <td>@enrollment.Student.Name</td>
                                    <td>@enrollment.Student.FatherName</td>
                                    <td>@enrollment.Student.Department</td>
                                    <td class="text-center">@attTotal</td>
                                    <td class="text-center text-success">@attPresent</td>
                                    <td class="text-center">
                                        @if (attTotal > 0)
                                        {
                                            <span class="badge @statusClass">@percentage%</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (attTotal > 0)
                                        {
                                            <span class="badge @statusClass">@statusText</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No Data</span>
                                        }
                                    </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="mt-4 d-flex gap-2">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
        <a asp-action="MarkAttendance" asp-route-id="@allocation.Id" class="btn btn-success">
            <i class="bi bi-pen"></i> Mark Attendance
        </a>
        <a asp-action="AttendanceHistory" asp-route-id="@allocation.Id" class="btn btn-info">
            <i class="bi bi-clock-history"></i> Attendance History
        </a>
        <a asp-action="LowAttendanceStudents" asp-route-id="@allocation.Id" class="btn btn-outline-danger">
            <i class="bi bi-exclamation-triangle"></i> Low Attendance
        </a>
    </div>

    <!-- Legend -->
    <div class="mt-3">
        <small class="text-muted">
            <strong>Status:</strong>
            <span class="badge bg-success me-2 ms-2">?75%</span> Good Standing
            <span class="badge bg-warning text-dark me-2 ms-2">60-74%</span> Warning
            <span class="badge bg-danger me-2 ms-2">&lt;60%</span> Critical
        </small>
    </div>
</div>
