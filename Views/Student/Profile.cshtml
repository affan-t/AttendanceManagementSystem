@model AttendanceManagementSystem.Models.Student

@{
    ViewData["Title"] = "My Profile";
    var totalClasses = ViewBag.TotalClasses as int? ?? 0;
    var presentCount = ViewBag.PresentCount as int? ?? 0;
    var absentCount = ViewBag.AbsentCount as int? ?? 0;
    var overallPercentage = ViewBag.OverallPercentage as double? ?? 0;
    var enrolledCourses = ViewBag.EnrolledCourses as int? ?? 0;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-person-circle"></i> My Profile</h2>
            <p class="text-muted mb-0">View your personal and academic details</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="row g-4">
        <!-- Personal Information Card -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-fill"></i> Personal Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Full Name</div>
                        <div class="col-sm-8 fw-bold">@Model.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Father's Name</div>
                        <div class="col-sm-8">@Model.FatherName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">CNIC</div>
                        <div class="col-sm-8"><code>@Model.CNIC</code></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Phone Number</div>
                        <div class="col-sm-8">@Model.PhoneNumber</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Email</div>
                        <div class="col-sm-8">@Model.User?.Email</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 text-muted">Address</div>
                        <div class="col-sm-8">@Model.Address</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Academic Information Card -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-mortarboard-fill"></i> Academic Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Registration No</div>
                        <div class="col-sm-8 fw-bold"><code>@Model.RollNo</code></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Department</div>
                        <div class="col-sm-8">@Model.Department</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Degree</div>
                        <div class="col-sm-8">@Model.Degree</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Batch/Session</div>
                        <div class="col-sm-8">
                            @if (Model.Batch != null)
                            {
                                <span class="badge bg-info">@Model.Batch.Name</span>
                            }
                            else
                            {
                                <span class="text-muted">Not Assigned</span>
                            }
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Intake Batch</div>
                        <div class="col-sm-8">@Model.IntakeBatch</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 text-muted">Enrollment Year</div>
                        <div class="col-sm-8">@Model.EnrollmentYear</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Attendance Summary -->
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-bar-chart-fill"></i> Attendance Summary</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3 col-6">
                    <div class="card border-primary h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-book fs-3 text-primary mb-2"></i>
                            <h6 class="text-muted mb-1">Enrolled Courses</h6>
                            <h2 class="text-primary mb-0">@enrolledCourses</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="card border-secondary h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-calendar-check fs-3 text-secondary mb-2"></i>
                            <h6 class="text-muted mb-1">Total Classes</h6>
                            <h2 class="text-secondary mb-0">@totalClasses</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="card border-success h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-check-circle fs-3 text-success mb-2"></i>
                            <h6 class="text-muted mb-1">Present</h6>
                            <h2 class="text-success mb-0">@presentCount</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="card border-danger h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-x-circle fs-3 text-danger mb-2"></i>
                            <h6 class="text-muted mb-1">Absent</h6>
                            <h2 class="text-danger mb-0">@absentCount</h2>
                        </div>
                    </div>
                </div>
            </div>

            @if (totalClasses > 0)
            {
                <div class="mt-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="fw-bold">Overall Attendance</span>
                        @{
                            string statusClass = overallPercentage >= 75 ? "text-success" : (overallPercentage >= 60 ? "text-warning" : "text-danger");
                            string progressClass = overallPercentage >= 75 ? "bg-success" : (overallPercentage >= 60 ? "bg-warning" : "bg-danger");
                        }
                        <span class="@statusClass fw-bold fs-4">@overallPercentage%</span>
                    </div>
                    <div class="progress" style="height: 25px;">
                        <div class="progress-bar @progressClass" style="width: @overallPercentage%">
                            @if (overallPercentage > 15)
                            {
                                <text>@overallPercentage%</text>
                            }
                        </div>
                    </div>

                    @if (overallPercentage < 75)
                    {
                        <div class="alert alert-warning mt-3 mb-0">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Warning:</strong> Your attendance is below the required 75% threshold.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success mt-3 mb-0">
                            <i class="bi bi-check-circle"></i>
                            <strong>Good Standing:</strong> Your attendance meets the minimum requirement.
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
