@model IEnumerable<AttendanceManagementSystem.Models.Attendance>

@{
    ViewData["Title"] = "Attendance Report";
    var allocation = ViewBag.Allocation as AttendanceManagementSystem.Models.CourseAllocation;
    double percentage = ViewBag.Percentage;
    string badgeClass = percentage >= 75 ? "bg-success" : (percentage >= 50 ? "bg-warning" : "bg-danger");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Attendance Report</h2>
            <h5 class="text-muted">@allocation?.Course.Name (@allocation?.Course.Code)</h5>
            <p class="mb-0"><strong>Teacher:</strong> @allocation?.Teacher.Name</p>
        </div>
        <div>
            <a asp-action="DownloadAttendance" asp-route-id="@allocation.Id" class="btn btn-success me-2">
                <i class="bi bi-download"></i> Download Report
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">Back to Dashboard</a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title text-muted">Total Classes</h6>
                    <h2 class="display-6 fw-bold">@ViewBag.TotalClasses</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title text-success">Present</h6>
                    <h2 class="display-6 fw-bold">@ViewBag.PresentCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title text-danger">Absent</h6>
                    <h2 class="display-6 fw-bold">@ViewBag.AbsentCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm h-100 text-white @badgeClass">
                <div class="card-body">
                    <h6 class="card-title">Percentage</h6>
                    <h2 class="display-6 fw-bold">@percentage%</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">Attendance History</h5>
        </div>
        @if (!Model.Any())
        {
            <div class="p-4 text-center">
                <p class="text-muted">No attendance records found for this course yet.</p>
            </div>
        }
        else
        {
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Day</th>
                        <th class="text-center">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.AttendanceDate.ToString("MMMM dd, yyyy")</td>
                            <td>@item.AttendanceDate.DayOfWeek</td>
                            <td class="text-center">
                                @if (item.IsPresent)
                                {
                                    <span class="badge bg-success rounded-pill px-3">Present</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger rounded-pill px-3">Absent</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>