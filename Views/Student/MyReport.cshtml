@model List<dynamic>

@{
    ViewData["Title"] = "My Attendance Report";
    var student = ViewBag.Student as AttendanceManagementSystem.Models.Student;
    var totalPresent = ViewBag.TotalPresent as int? ?? 0;
    var totalAbsent = ViewBag.TotalAbsent as int? ?? 0;
    var attendanceByDate = ViewBag.AttendanceByDate as IEnumerable<dynamic>;
    
    var goodCount = Model.Count(m => (double)m.Percentage >= 75);
    var warningCount = Model.Count(m => (double)m.Percentage >= 60 && (double)m.Percentage < 75);
    var criticalCount = Model.Count(m => (double)m.Percentage < 60 && (int)m.TotalClasses > 0);
    var noDataCount = Model.Count(m => (int)m.TotalClasses == 0);
    
    var overallPercentage = (totalPresent + totalAbsent) > 0 
        ? Math.Round((double)totalPresent / (totalPresent + totalAbsent) * 100, 1) 
        : 0;
    
    string statusColor = overallPercentage >= 75 ? "success" : (overallPercentage >= 60 ? "warning" : "danger");
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="page-title"><i class="bi bi-file-earmark-bar-graph me-2"></i>My Attendance Report</h1>
        <p class="page-subtitle mb-0">Comprehensive attendance report for @student?.Name (@student?.RollNo)</p>
    </div>
    <div class="d-flex gap-2">
        <button type="button" class="btn btn-success" onclick="generatePDF()">
            <i class="bi bi-file-pdf me-1"></i>Download PDF
        </button>
        <a href="@Url.Action("ExportFullReport")" class="btn btn-primary">
            <i class="bi bi-download me-1"></i>Export CSV
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back
        </a>
    </div>
</div>

<div id="reportContent">
    <!-- Report Header for PDF -->
    <div class="report-header d-none" id="pdfHeader">
        <h2 class="text-center mb-2">Student Attendance Report</h2>
        <p class="text-center text-muted mb-4">
            @student?.Name | @student?.RollNo | @student?.Batch?.Name | Generated: @DateTime.Now.ToString("MMMM dd, yyyy")
        </p>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-card-value">@Model.Count</div>
                        <div class="stat-card-label">Enrolled Courses</div>
                    </div>
                    <div class="stat-card-icon primary">
                        <i class="bi bi-book"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-card-value text-success">@totalPresent</div>
                        <div class="stat-card-label">Total Present</div>
                    </div>
                    <div class="stat-card-icon success">
                        <i class="bi bi-check-circle"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-card-value text-danger">@totalAbsent</div>
                        <div class="stat-card-label">Total Absent</div>
                    </div>
                    <div class="stat-card-icon danger">
                        <i class="bi bi-x-circle"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-card-value text-@statusColor">@overallPercentage%</div>
                        <div class="stat-card-label">Overall Attendance</div>
                    </div>
                    <div class="stat-card-icon @statusColor">
                        <i class="bi bi-pie-chart"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Status Alert -->
    @if (overallPercentage >= 75)
    {
        <div class="alert alert-success mb-4">
            <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                <div>
                    <strong>Good Standing!</strong> Your attendance meets the minimum requirement. Keep up the great work!
                </div>
            </div>
        </div>
    }
    else if (overallPercentage >= 60)
    {
        <div class="alert alert-warning mb-4">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                <div>
                    <strong>Warning!</strong> Your attendance is below 75%. Please improve your attendance to avoid penalties.
                </div>
            </div>
        </div>
    }
    else if ((totalPresent + totalAbsent) > 0)
    {
        <div class="alert alert-danger mb-4">
            <div class="d-flex align-items-center">
                <i class="bi bi-x-circle-fill fs-4 me-3"></i>
                <div>
                    <strong>Critical!</strong> Your attendance is critically low. Contact your advisor immediately.
                </div>
            </div>
        </div>
    }

    <!-- Charts Row -->
    <div class="row g-4 mb-4">
        <!-- Attendance Distribution Pie Chart -->
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-pie-chart me-2"></i>Attendance Distribution</h6>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <div class="chart-container" style="width: 100%; height: 250px;">
                        <canvas id="attendancePieChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Course Status Distribution -->
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-bar-chart me-2"></i>Course Status</h6>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <div class="chart-container" style="width: 100%; height: 250px;">
                        <canvas id="statusChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Course-wise Attendance -->
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-graph-up me-2"></i>Course-wise Attendance</h6>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <div class="chart-container" style="width: 100%; height: 250px;">
                        <canvas id="courseChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <h3 class="text-success mb-1">@goodCount</h3>
                    <small class="text-muted">Courses ?75%</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <h3 class="text-warning mb-1">@warningCount</h3>
                    <small class="text-muted">Courses 60-74%</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body text-center">
                    <h3 class="text-danger mb-1">@criticalCount</h3>
                    <small class="text-muted">Courses &lt;60%</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-secondary">
                <div class="card-body text-center">
                    <h3 class="text-secondary mb-1">@noDataCount</h3>
                    <small class="text-muted">No Data</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Course Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h6 class="mb-0"><i class="bi bi-table me-2"></i>Course-wise Attendance</h6>
            <span class="badge bg-secondary">@Model.Count courses</span>
        </div>
        <div class="table-responsive">
            <table class="table mb-0" id="reportTable">
                <thead>
                    <tr>
                        <th>Course</th>
                        <th>Teacher</th>
                        <th>Section</th>
                        <th class="text-center">Total</th>
                        <th class="text-center">Present</th>
                        <th class="text-center">Absent</th>
                        <th class="text-center">Attendance</th>
                        <th class="text-center">Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var enrollment = item.Enrollment as AttendanceManagementSystem.Models.Enrollment;
                        double percentage = item.Percentage;
                        string badgeClass = percentage >= 75 ? "badge-success" : (percentage >= 60 ? "badge-warning" : "badge-danger");
                        string statusText = percentage >= 75 ? "Good" : (percentage >= 60 ? "Warning" : "Critical");
                        <tr>
                            <td>
                                <div class="fw-semibold">@enrollment?.CourseAllocation?.Course?.Name</div>
                                <small class="text-muted">@enrollment?.CourseAllocation?.Course?.Code</small>
                            </td>
                            <td>@enrollment?.CourseAllocation?.Teacher?.Name</td>
                            <td>@enrollment?.CourseAllocation?.Section?.Name</td>
                            <td class="text-center">@item.TotalClasses</td>
                            <td class="text-center text-success fw-medium">@item.PresentCount</td>
                            <td class="text-center text-danger fw-medium">@item.AbsentCount</td>
                            <td class="text-center">
                                @if ((int)item.TotalClasses > 0)
                                {
                                    <span class="badge @badgeClass">@percentage%</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-center">
                                @if ((int)item.TotalClasses > 0)
                                {
                                    <span class="badge @badgeClass">@statusText</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">No Data</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("ViewAttendance", new { id = enrollment?.CourseAllocationId })" 
                                   class="btn btn-sm btn-outline-primary" title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Report Footer for PDF -->
    <div class="report-footer d-none mt-4 pt-3 border-top" id="pdfFooter">
        <p class="text-muted small text-center">
            This report was generated by the Attendance Management System on @DateTime.Now.ToString("MMMM dd, yyyy 'at' hh:mm tt")
        </p>
    </div>
</div>

<!-- Legend -->
<div class="mt-3 text-muted small">
    <strong>Legend:</strong>
    <span class="badge badge-success ms-2">?75%</span> Good Standing
    <span class="badge badge-warning ms-2">60-74%</span> Warning
    <span class="badge badge-danger ms-2">&lt;60%</span> Critical
</div>

@section Scripts {
    <!-- html2pdf library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
    
    <script>
        // Attendance Pie Chart
        const pieCtx = document.getElementById('attendancePieChart').getContext('2d');
        new Chart(pieCtx, {
            type: 'doughnut',
            data: {
                labels: ['Present', 'Absent'],
                datasets: [{
                    data: [@totalPresent, @totalAbsent],
                    backgroundColor: ['#10b981', '#ef4444'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' }
                },
                cutout: '60%'
            }
        });

        // Status Chart
        const statusCtx = document.getElementById('statusChart').getContext('2d');
        new Chart(statusCtx, {
            type: 'bar',
            data: {
                labels: ['Good', 'Warning', 'Critical', 'No Data'],
                datasets: [{
                    label: 'Courses',
                    data: [@goodCount, @warningCount, @criticalCount, @noDataCount],
                    backgroundColor: ['#10b981', '#f59e0b', '#ef4444', '#6b7280']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: { beginAtZero: true, ticks: { stepSize: 1 } }
                }
            }
        });

        // Course-wise Chart
        @{
            var courseNames = Model.Select(m => ((AttendanceManagementSystem.Models.Enrollment)m.Enrollment)?.CourseAllocation?.Course?.Code ?? "").ToList();
            var coursePercentages = Model.Select(m => (double)m.Percentage).ToList();
            var courseColors = Model.Select(m => (double)m.Percentage >= 75 ? "#10b981" : ((double)m.Percentage >= 60 ? "#f59e0b" : "#ef4444")).ToList();
        }
        const courseCtx = document.getElementById('courseChart').getContext('2d');
        new Chart(courseCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(courseNames)),
                datasets: [{
                    label: 'Attendance %',
                    data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(coursePercentages)),
                    backgroundColor: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(courseColors))
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                indexAxis: 'y',
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    x: { beginAtZero: true, max: 100 }
                }
            }
        });

        // Generate PDF
        function generatePDF() {
            // Show PDF headers/footers
            document.getElementById('pdfHeader').classList.remove('d-none');
            document.getElementById('pdfFooter').classList.remove('d-none');
            
            const element = document.getElementById('reportContent');
            const opt = {
                margin: 10,
                filename: 'AttendanceReport_@(student?.RollNo)_@(DateTime.Now.ToString("yyyyMMdd")).pdf',
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2, useCORS: true },
                jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
            };

            html2pdf().set(opt).from(element).save().then(() => {
                // Hide PDF headers/footers after generating
                document.getElementById('pdfHeader').classList.add('d-none');
                document.getElementById('pdfFooter').classList.add('d-none');
            });
        }
    </script>
}
